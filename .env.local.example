# VardAssets Environment Configuration
# Copy this file to .env.local and fill in your credentials

# ============================================
# DATABASE
# ============================================
# Option 1: Supabase (recommended)
SUPABASE_DATABASE_URL=postgresql://postgres.xxxxxxxxxxxx:password@aws-0-region.pooler.supabase.com:5432/postgres

# Option 2: Neon (legacy)
# DATABASE_URL=postgresql://username:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require

# ============================================
# SUPABASE (Frontend)
# ============================================
VITE_SUPABASE_URL=https://xxxxxxxxxxxx.supabase.co
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# For server-side operations (optional, falls back to anon key)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================
# CLOUDFLARE R2 (File Storage)
# ============================================
CF_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=vardassets-files
R2_PUBLIC_URL=https://pub-xxxxxxxxxxxxxxxx.r2.dev

# ============================================
# AUTHENTICATION
# ============================================
# JWT Secret (for token signing)
JWT_SECRET=your-jwt-secret-here

# Token for admin recovery endpoint (/api/force-setup)
ADMIN_RESET_TOKEN=long-unique-token-for-admin-reset

# ============================================
# LEGACY (can be removed when fully migrated)
# ============================================
# Vercel Blob Storage (no longer used)
# BLOB_READ_WRITE_TOKEN=vercel_blob_rw_xxxxxxxxxxxxx
