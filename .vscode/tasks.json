{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build frontend (vite)",
      "type": "shell",
      "command": "npm --prefix frontend run build",
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Run frontend dev",
      "type": "shell",
      "command": "npm --prefix frontend run dev",
      "isBackground": true,
      "group": "build"
    },
    {
      "label": "Restart backend (nodemon)",
      "type": "shell",
      "command": "npm --prefix backend run start",
      "isBackground": true,
      "group": "build"
    }
  ]
}