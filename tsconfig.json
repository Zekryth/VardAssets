{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src",
    "vite.config.*",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "../frontend-vue/**"
  ]
}